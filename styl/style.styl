//stylus -w styl/style.styl -o css/style.css

@font-face {
    font-family: 'Modi-Thorson-Italic';
    src:url('Modi-Thorson-Italic.ttf.woff') format('woff'),
        url('Modi-Thorson-Italic.ttf.svg#Modi-Thorson-Italic') format('svg'),
        url('Modi-Thorson-Italic.ttf.eot'),
        url('Modi-Thorson-Italic.ttf.eot?#iefix') format('embedded-opentype'); 
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Roboto-Medium';
    src:url('../fonts/Roboto_Medium.ttf') format('typescript');
    font-style: normal;
}

main-dark-color = #0c1013;

body
    background-color main-dark-color

.wrapper
    background-color main-dark-color
    max-width 1920px 
    background-size 1560px 740px
    min-height 780px
    display flex
    justify-content: center

.content 
    margin 0 auto 0 auto
    min-width 1560px
    position relative

.background
    position absolute
    top 0
    left 50%
    transform translateX(-50%)
    z-index 0
    max-width 1560px
    max-height 740px
    display block

.flag
    position absolute
    top 33px
    left 50%
    transform translateX(-50%)
    z-index 2
    max-width 483px
    max-height 340px
    display block

.team 
    position absolute
    top 122px
    left 48%
    transform translateX(-50%)
    z-index 2
    width 1160px
    max-height 437px
    display block

.big-ben 
    position absolute
    top: 61px;
    left: 30px;
    z-index 1
    width 547px
    min-height 456px
    display block

.bridge 
    position absolute
    top 64px
    left 39%
    z-index 1
    min-width: 877px;
    min-height: 334px;
    display block

.btn
    width 365px
    height 88px
    background-color #fdc000
    transform skew(-10deg)
    position absolute
    top 523px
    left 56%
    z-index 2
    border none
    &:hover 
        background-color #fd8100

.bg-rectangle 
    position absolute
    top 501px
    left 50%
    z-index 2
    transform translateX(-50%)
    min-width: 1022px;
    min-height: 133px;
    display block

.text-prize 
    position absolute
    top 425px
    left 51%
    z-index 3
    transform translateX(-50%)
    width 757px
    height 105px
    display block

.bets 
    position absolute
    top 515px
    left 36%
    z-index 3
    transform translateX(-50%)
    min-width: 515px;
    min-height: 103px;
    display block

.header 
    width 100%
    min-height 75px
    background-color main-dark-color
    opacity 0.9
    display flex
    justify-content center
    align-items center
    z-index 10
    position fixed

.present
    width 1000px
    display flex

.present a
    align-self center

.boxing-day
    width 323px
    height 61px
    background-image url('../images/boxing-day.png')
    display flex
    justify-content center

.boxing-day img
    align-self center

.header-block
    margin-left auto
    display flex
    width 600px

.timer 
    width 280px
    opacity 1
    background-image url('../images/Rectangle_3.png')
    position relative
    &::before
        position absolute
        content ""
        top 50px
        left 20px
        background-image url('../images/words.png')
        width 234px
        height 11px

canvas 
    width 93%

@keyframes pulse
    from 
        -webkit-transform scale3d(1, 1, 1)
        transform scale3d(1, 1, 1) skew(-10deg)
    50%
        -webkit-transform scale3d(1.05, 1.05, 1.05)
        transform scale3d(1.05, 1.05, 1.05) skew(-10deg)
    to 
        -webkit-transform scale3d(1, 1, 1)
        transform scale3d(1, 1, 1) skew(-10deg)

.btn
    animation-name pulse 
    animation-duration 2s
    animation-iteration-count infinite

@keyframes bigben-show
    from 
        top 315px
    to 
        top 61px

.big-ben 
    animation-name bigben-show
    animation-duration 5s
    animation-iteration-count 1
    animation-timing-function ease-out

@keyframes move
    15% 
        -webkit-transform: translateX(9px);
        transform: translateX(9px);
    30% 
        -webkit-transform: translateX(-9px);
        transform: translateX(-9px);
    40% 
        -webkit-transform: translateX(6px);
        transform: translateX(6px);
    50% 
        -webkit-transform: translateX(-6px);
        transform: translateX(-6px);
    65% 
        -webkit-transform: translateX(3px);
        transform: translateX(3px);
    100% 
        -webkit-transform: translateX(0);
        transform: translateX(0);

@keyframes bridge-show
    from 
        top 315px
    to 
        top 64px

.bridge
    animation-name bridge-show
    animation-duration 5s
    animation-iteration-count 1
    animation-timing-function ease-out

.move
    animation-name move
    animation-duration 2s
    animation-iteration-count infinite
    animation-timing-function linear
    animation-delay 2s

@keyframes slideme 
  0% 
    left 10%
  30% 
    left 50%
  100% 
    left 63%

  
.highlight
    width 460px
    height 55px
    position absolute
    left 10%
    top 610px
    z-index 5
    transition all 0.1s
    animation-name slideme
    animation-duration: 5s
    animation-delay 3s
    animation-timing-function linear
    animation-iteration-count infinite

.content::after
    content ""
    position absolute
    top 220px
    left 0
    background-image url('../images/dark-bg.png')
    width 520px
    height 297px
    display none

