@media screen and (max-width: 500px) and (min-width: 320px) {
    .background {
        max-width 827px
        height 369px
        top 11px
    }
    .header {
        min-height 48px
    }
    .present a img {
        width 128px
        height 34px
    }
    .header-block {
        display flex
        flex-wrap wrap
        width 190px
        height 62px
        top 60px
        left 52%
    }
    .boxing-day {
        width 190px
        height 31px
        background-color #050c30
        transform skewX(-10deg)
    }
    .boxing-day img {
        width 135px
    }
    .timer {
        width 190px
        height 33px  
        transform skewX(-10deg)
        margin-left -6px 
    }
    canvas {
        width: 75%
        transform skewX(10deg) translateX(-50%)
        top 10px
        position absolute
        left 50%
        top 0
    }
    .timer::before {
        top 24px
        left 36px
        background-image: url("../images/words.png")
        width 126px
        height 6px
        background-size contain
    }
    .flag {
        width 152px
        height 107px
        top 135px
        left 56%
    }
    .team {
        width 360px
        height 145px
        top 161px
        left 55% 
    }
    .content::after {
        display block
        z-index 2
    }
    .content {
        min-width 500px    
    }
    .big-ben {
        width 173px
        min-height 161px
        top 109px
        left 42px    
    }
    .bridge {
        width 269px
        height 99px
        min-width 269px
        min-height 99px
        top 104px
        left 42%
    }
    .text-prize {
        left 57%
        width 300px
        height 50px
        top 262px    
    }
    .content::before {
        content ""
        position absolute
        top 310px
        left 55%
        width 348px
        height 150px
        background-color #06102f    
        z-index 3
        transform skewX(-6deg) translateX(-50%)
    }
    .bg-rectangle {
        display none
    }
    .bets {
        width 296px
        height 66px
        min-width 296px
        min-height 66px
        top 316px
        left 56%
    }
    .btn {
        left 33%    
        width 211px
        height 50px
        top 400px
        position absolute
        z-index 3
    }
    .btn img {
        width 141px
        height 14px
        transform skewX(10deg)
    }
    .highlight {
        width 205px
        height 28px
        top 448px   
    }
}